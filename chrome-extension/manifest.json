{
  "manifest_version": 3,
  "name": "SafeGuard Family - Parental Control",
  "version": "1.0.0",
  "description": "Comprehensive parental control system. Block inappropriate websites, monitor activity, and protect children online.",
  "author": "SafeGuard Family Team",
  "minimum_chrome_version": "90",
  "incognito": "spanning",
  
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "alarms",
    "history"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.fb.com/*",
        "*://facebook.com/*",
        "*://fb.com/*"
      ],
      "js": ["facebook-filter.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "SafeGuard Family - Click to setup"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "blocked-page.html",
        "blocked-page.js",
        "parent-setup.html",
        "parent-setup.js",
        "login.html",
        "login.js",
        "dashboard.html",
        "dashboard.js",
        "help.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "homepage_url": "https://safeguard-family.vercel.app",
  "update_url": "https://clients2.google.com/service/update2/crx"
}
